<%= form_for([@event, @event.postcomments.build]) do |f| %>

	<p>
		<% if user_signed_in? %>
			<%= f.hidden_field :user_name, :value => current_user.email%>
		<%else%>
			<%= f.hidden_field :user_name, :value => "user"%>
			<%end%>

	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %><br>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<% end %>